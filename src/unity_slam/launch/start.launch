<?xml version="1.0"?>
<launch>
    <param name="robot_description" command="xacro '$(find gopher_description)/urdf/gopher.xacro'" />
    <param name="ROS_IP" type="string" value="0.0.0.0" />
    <param name="use_sim_time" value="true"/>
    <node pkg="unity_slam" type="server_endpoint.py" name="srv" ></node>
    <node type="rviz" name="rviz" pkg="rviz" args="-d $(find unity_slam)/rviz/config.rviz" />
    <param name="pub_map_odom_transform" value="true"/>
    <param name="map_frame" value="world" />
    <param name="base_frame" value="freight/base_frame" />
    <param name="odom_frame" value="freight/base_frame" />
    <node pkg="hector_mapping" type="hector_mapping" name="hector_mapping" output="screen">
        <param name="scan_topic" value="base_scan" />
    </node>
</launch>
